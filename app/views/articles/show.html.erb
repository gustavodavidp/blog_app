<h2 align="center">Titulo: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
 <h4 class="center"><strong>Description:</strong></h4>
 <hr>
 <%= simple_format(@article.text) %>

<h2>Comments</h2>
<%= render @article.comments %>
 
<h2>Add a comment:</h2>
<%= render 'comments/form' %>
<%= link_to "Editar", edit_article_path(@article), class: "btn btn-xs btn-primary" %> |
<%= link_to 'Regresar', articles_path, class: "btn btn-xs btn-success" %>
<%= link_to "Eliminar", article_path(@article), method: :delete, data: { confirm: "¿Está seguro que desea borrar este articulo?"}, class: "btn btn-xs btn-danger" %>